{
  "schemaVersion": 1,
  "id": "hexkinetics",
  "version": "${version}",

  "name": "HexKinetics",
  "description": "An addon mod for Hex Casting that adds additional operations on vectors and some spells.",
  "authors": [
    "Sonunte",
    "Talia"
  ],
  "contact": {
    "homepage": "",
    "sources": ""
  },

  "license": "MIT",
  "icon": "logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {"adapter": "kotlin", "value": "net.acrimoris.hexkinetics.fabric.FabricYourModInitializer"}
    ],
    "client": [
      {"adapter": "kotlin", "value": "net.acrimoris.hexkinetics.fabric.FabricYourModClientInitializer"}
    ],
    "rei_client": [
      "net.acrimoris.hexkinetics.fabric.interop.rei.HexKineticsREIPlugin"
    ],
    "emi": [
      "net.acrimoris.hexkinetics.fabric.interop.emi.HexKineticsEMIPlugin"
    ],
    "modmenu": [
      "net.acrimoris.hexkinetics.fabric.interop.ModMenuInterop"
    ]
  },
  "mixins": [
    "hexkineticsplat.mixins.json",
    "hexkinetics.mixins.json"
  ],
  "accessWidener": "hexkinetics.accesswidener",

  "depends": {
    "minecraft": "=1.19.2",
    "java": ">=17",
    "fabricloader": ">=0.14",
    "fabric": ">=0.64",
    "fabric-language-kotlin": ">=1.7.4+kotlin.1.6.21",
    "cardinal-components": ">=5.0.2",
    "patchouli": ">=1.19.2-77",
    "paucal": "0.5.x",
    "hexcasting": ">=0.10.3"
  },

  "custom": {
    "cardinal-components": [
    ]
  }
}
